# Django Environment Configuration
# Copy this file to .env and update the values for your environment

# Basic Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# For LOCAL DEVELOPMENT: Comment out DATABASE_URL to use SQLite
# DATABASE_URL=

# For PRODUCTION (Railway): Uncomment and set your Railway database URL
# DATABASE_URL=postgresql://user:password@host:port/database

# Individual Database Settings (fallback when DATABASE_URL is not set)
# These are used when DATABASE_URL is commented out
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# Redis Configuration (for production caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Environment-specific notes:
# LOCAL: Use SQLite (comment out DATABASE_URL)
# CI/CD: Uses SQLite automatically (no DATABASE_URL set in GitHub Actions)
# PRODUCTION: Set DATABASE_URL to your production database