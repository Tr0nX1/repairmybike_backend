{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "DJANGO_SETTINGS_MODULE": "repairmybike.settings",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1",
        "DEBUG": "False",
        "ALLOWED_HOSTS": "*.railway.app,backend-rmb.railway.internal",
        "CORS_ALLOWED_ORIGINS": "https://frontend-rmb.railway.app,https://backend-rmb.railway.internal"
      }
    },
    "staging": {
      "variables": {
        "DJANGO_SETTINGS_MODULE": "repairmybike.settings",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1",
        "DEBUG": "True",
        "ALLOWED_HOSTS": "*.railway.app,backend-rmb.railway.internal",
        "CORS_ALLOWED_ORIGINS": "https://frontend-rmb.railway.app,https://backend-rmb.railway.internal"
      }
    }
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "type": "repo",
        "repo": "repairmybike/backend"
      },
      "variables": {
        "DJANGO_SETTINGS_MODULE": "repairmybike.settings",
        "PYTHONPATH": "/app",
        "PYTHONUNBUFFERED": "1"
      }
    }
  ]
}